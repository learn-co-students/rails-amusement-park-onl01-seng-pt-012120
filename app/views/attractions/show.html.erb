<h3><%= @attraction.name %></h3>
Tickets: <%= @attraction.tickets %>

<% if current_user.admin %>
	<p><%= link_to "Edit Attraction", edit_attraction_path(@attraction), :class => 'btn btn-default', :role => 'button' %></p> 
<% else %>
	<%= form_for @ride do |f| %>
		<%= f.hidden_field :user_id, :value => current_user.id %>
		<%= f.hidden_field :attraction_id, :value => @attraction.id %>
		<%= f.submit "Go on this ride", :class => "btn btn-success" %>
	<% end %>
<% end %>

  
