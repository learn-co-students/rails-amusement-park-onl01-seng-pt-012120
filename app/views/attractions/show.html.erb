<h1><%= @attraction.name %></h1>
<%= @attraction.tickets %><br>
<%= @attraction.min_height %><br>
<%= @attraction.nausea_rating %><br>
<%= @attraction.happiness_rating %><br>
<% if User.find(session[:user_id]).admin == false %>
    <%= form_tag ("/attractions/#{@attraction.id}/ride") do %>
        <%= button_tag "Go on this ride" %>
    <% end %>
<% else %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
    <%= link_to "Destroy Attraction", "/attractions/#{@attraction.id}/destroy" %>
<% end %>