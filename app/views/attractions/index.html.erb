<% flash.each do |type, msg| %>
	<div class="alert alert-warning">
		<%= msg %>
	</div>
<% end %>

<table class="table">
	<thead>
	  <tr>
	    <th colspan="3"></th>
	  </tr>
	</thead>

	<% if current_user.admin %>
		<a class="btn btn-default btn-block" href="<%= new_attraction_path %>" role="button"><span class="glyphicon glyphicon-plus"></span>&nbsp;New Attraction</a>
	<% end %>
	 
	<tbody>
		<tr>
			<th>Name</th>
			<th>Ticket Cost</th>
			<th>Actions</th>
		</tr>
		<% @attractions.each do |attraction| %>
		<tr>
			<td><%= attraction.name %></td>
			<td><%= attraction.tickets %></td>
			<% if current_user.admin %>
				<td><%= link_to "Show #{attraction.name}", attraction_path(attraction) %> | <%= link_to "Edit Attraction", edit_attraction_path(attraction) %></td> 
			<% else %>
			<td><%= link_to "Go on #{attraction.name}", attraction_path(attraction) %></td>
			<% end %>
			
		</tr>
		<% end %>
	</tbody>
	
</table>