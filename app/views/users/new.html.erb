<%= form_for @user do |f| %>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br>
    <%= f.label :height, "Height (inches)" %>
    <br>
    <%= f.number_field :height %>
    <br>
    <%= f.label :tickets, "How many tickets do you have?" %>
    <br>
    <%= f.number_field :tickets %>
    <br>
    <%= f.label :happiness, "How happy are you (1-5)" %>
    <br>
    <%= f.number_field :happiness %>
    <br>
    <%= f.label :nausea, "How nauseous are you (1-5)" %>
    <br>
    <%= f.number_field :nausea %>
    <br>
    <%= f.label :admin, "Check box if own a theme park" %>
    <%= f.check_box :admin %>
    <br>
    <br>
    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
    <br>
    <%= f.submit %>
<% end %>