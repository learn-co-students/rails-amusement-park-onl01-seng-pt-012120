<% if flash[:notice] %>
<div class="notice"><%= flash[:notice] %></div>
<% end %>

<p>Name: <%= @user.name %></p>
<br>
<p>Height: <%= @user.height %></p>
<br>
<p>Total Tickets: <%= @user.tickets %></p>
<br>
<p>Mood: <%= @user.mood %></p>
<br>
<% if @user.admin == false %>
<p></p>
<% else %>
<p>ADMIN</p>
<% end %>
<p><%= link_to "See attractions", attractions_path %></p>
<h10><%= link_to "Log Out", logout_path, method: 'post' %></h10>